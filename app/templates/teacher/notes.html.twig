{% extends 'base.html.twig' %}

{% block title %}Espace enseignant{% endblock %}

{% block body %}

    <section class="row d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-11 col-md-12 m-auto alert alert-secondary">
            <div class="my-3 text-center">
                <h1 class="fs-1 text-uppercase text-primary">Notes par élèves</h1>
            </div>
            <div>
                {{ form_start(form) }}
                <div class="fs-2 my-3">
                    {{ form_row(form.note) }}
                </div>
                <div class="fs-2 my-3">
                    {{ form_row(form.mensualNote) }}
                </div>
                <div class="fs-2 my-3">
                    {{ form_row(form.anualNote) }}
                </div>
                <div class="fs-2 my-3">
                    {{ form_row(form.remark ) }}
                </div>
                <div class="fs-2 my-3">
                    {{ form_row(form.courses ) }}
                </div>
                <div class="fs-2 my-3">
                    {{ form_row(form.users) }}
                </div>
                <div class="text-center my-3">
                    {{ form_row(form.ajouter) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
